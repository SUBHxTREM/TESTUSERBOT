

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $TEST_REPO == "TESTUSERBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0tSSVNITkEtWkVOSVRTVU9QL1RFU1RVU0VSQk9UL2FyY2hpdmUvTGVnZW5kQm90LnppcA==" | base64 -d
    elif [[ $TEST_REPO == "TESTUSERBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0tSSVNITkEtWkVOSVRTVU9QL1RFU1RVU0VSQk9UL2FyY2hpdmUvTGVnZW5kQm90LnppcA==" | base64 -d
    elif [[ $TEST_REPO =~ $regex ]]
    then
        if [[ $TEST_REPO_BRANCH ]]
        then
            echo "${TEST_REPO}/archive/${TEST_REPO_BRANCH}.zip"
        else
            echo "${TEST_REPO}/archive/master.zip"
      fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0tSSVNITkEtWkVOSVRTVU9QL1RFU1RVU0VSQk9UL2FyY2hpdmUvTGVnZW5kQm90LnppcA==" | base64 -d
    fi
}


_setting_bot () {
    local zippath
    zippath="TESTUSERBot.zip"
    echo "  ðŸ’¥Installation starting Testuserbot Source Code...ðŸ¥³"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data Ho raha h chachaðŸ˜‚ ..."
    TESTPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  Testuserbot Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $TESTPATH
    echo "    ðŸ’¥ Starting Testuserbot  ðŸ’¥   "
    echo "
    ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_setting_bot
